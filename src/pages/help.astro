---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Help Center - Orlando Events">
  <div class="min-h-screen bg-gray-50">
    <Header />
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl mb-8">Help Center</h1>
      
      <div class="space-y-12">
        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Frequently Asked Questions</h2>
          <div class="space-y-4">
            <div class="bg-white shadow sm:rounded-lg">
              <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg font-medium text-gray-900">How do I submit an event?</h3>
                <p class="mt-2 text-gray-600">
                  Click on the "Submit Event" button in the navigation menu and fill out the event details form.
                </p>
              </div>
            </div>
            
            <div class="bg-white shadow sm:rounded-lg">
              <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg font-medium text-gray-900">How long does event approval take?</h3>
                <p class="mt-2 text-gray-600">
                  Events are typically reviewed within 24-48 hours of submission.
                </p>
              </div>
            </div>
          </div>
        </section>
        
        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Contact Support</h2>
          <p class="text-gray-600">
            Need additional help? Contact our support team at support@orlandoevents.com
          </p>
        </section>
      </div>
    </main>

    <Footer />
  </div>
</Layout>