---
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  // Mock event IDs for static generation
  const eventIds = [1, 2, 3];
  
  return eventIds.map(id => ({
    params: { id: id.toString() }
  }));
}

const { id } = Astro.params;

// This would be replaced with actual data fetching
const event = {
  id: 1,
  title: "Orlando Food & Wine Festival",
  date: "March 15-17, 2024",
  time: "11:00 AM - 10:00 PM",
  location: "Lake Eola Park, 512 E Washington St, Orlando, FL 32801",
  image: "https://images.unsplash.com/photo-1555939594-58d7cb561ad1?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80",
  category: "Food & Drink",
  price: "$45",
  description: "Join us for the largest food and wine festival in Orlando! Sample delicious dishes from over 40 local restaurants, enjoy wine tastings from around the world, and experience live cooking demonstrations from celebrity chefs. The festival will feature live music, art exhibitions, and various entertainment throughout the weekend.",
  organizer: "Orlando Food & Wine Society",
  website: "https://example.com/food-wine-festival",
};
---

<Layout title={event.title}>
  <div class="bg-white">
    <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-2 lg:gap-x-8 lg:items-start">
        <!-- Image gallery -->
        <div class="flex flex-col">
          <div class="w-full aspect-w-1 aspect-h-1 bg-gray-200 rounded-lg overflow-hidden xl:aspect-w-7 xl:aspect-h-8">
            <img
              src={event.image}
              alt={event.title}
              class="w-full h-full object-center object-cover"
            />
          </div>
        </div>

        <!-- Event info -->
        <div class="mt-10 px-4 sm:px-0 sm:mt-16 lg:mt-0">
          <h1 class="text-3xl font-extrabold tracking-tight text-gray-900">{event.title}</h1>
          
          <div class="mt-3">
            <h2 class="sr-only">Event Information</h2>
            
            <div class="mt-6 space-y-6">
              <div class="flex items-center">
                <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                </svg>
                <p class="ml-2 text-sm text-gray-500">{event.date}</p>
              </div>

              <div class="flex items-center">
                <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
                <p class="ml-2 text-sm text-gray-500">{event.time}</p>
              </div>

              <div class="flex items-center">
                <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <p class="ml-2 text-sm text-gray-500">{event.location}</p>
              </div>

              <div class="flex items-center">
                <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
                </svg>
                <p class="ml-2 text-sm text-gray-500">{event.price}</p>
              </div>
            </div>

            <div class="mt-6">
              <h3 class="text-sm font-medium text-gray-900">Description</h3>
              <div class="mt-4 prose prose-sm text-gray-500">
                <p>{event.description}</p>
              </div>
            </div>

            <div class="mt-6">
              <h3 class="text-sm font-medium text-gray-900">Organizer</h3>
              <p class="mt-2 text-sm text-gray-500">{event.organizer}</p>
            </div>

            <div class="mt-10 flex space-x-4">
              <button
                type="button"
                class="w-full bg-primary-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
              >
                Get Tickets
              </button>
              
              <button
                type="button"
                class="w-full bg-white border border-gray-300 rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
              >
                Add to Calendar
              </button>
            </div>

            {event.website && (
              <div class="mt-6">
                <a
                  href={event.website}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary-600 hover:text-primary-500"
                >
                  Visit Event Website â†’
                </a>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>