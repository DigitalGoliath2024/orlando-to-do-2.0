---
const featuredEvents = [
  {
    id: 1,
    title: "Orlando Food & Wine Festival",
    date: "March 15-17, 2024",
    image: "https://images.unsplash.com/photo-1555939594-58d7cb561ad1?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80",
    category: "Food & Drink",
    price: "$45",
  },
  {
    id: 2,
    title: "Downtown Music Festival",
    date: "April 5-7, 2024",
    image: "https://images.unsplash.com/photo-1533174072545-7a4b6ad7a6c3?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80",
    category: "Music",
    price: "$65",
  },
  {
    id: 3,
    title: "Family Fun Day at Lake Eola",
    date: "March 23, 2024",
    image: "https://images.unsplash.com/photo-1591474200742-8e512e6f98f8?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80",
    category: "Family",
    price: "Free",
  },
];
---

<section class="py-12 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Featured Events
      </h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Don't miss out on these amazing events happening in Orlando
      </p>
    </div>

    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        featuredEvents.map((event) => (
          <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
            <div class="flex-shrink-0">
              <img class="h-48 w-full object-cover" src={event.image} alt={event.title} />
            </div>
            <div class="flex-1 bg-white p-6 flex flex-col justify-between">
              <div class="flex-1">
                <p class="text-sm font-medium text-primary-600">{event.category}</p>
                <div class="block mt-2">
                  <p class="text-xl font-semibold text-gray-900">{event.title}</p>
                  <p class="mt-3 text-base text-gray-500">{event.date}</p>
                </div>
              </div>
              <div class="mt-6 flex items-center justify-between">
                <div class="text-sm font-medium text-gray-900">{event.price}</div>
                <div class="text-sm font-medium">
                  <a
                    href={`/events/${event.id}`}
                    class="text-primary-600 hover:text-primary-500"
                  >
                    Learn More â†’
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a
        href="/events"
        class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700"
      >
        View All Events
      </a>
    </div>
  </div>
</section>